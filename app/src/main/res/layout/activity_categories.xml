<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lavender_blue"
    tools:context=".listItems.Categories">

    <Button
        android:id="@+id/backButton"
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:layout_marginStart="5sp"
        android:layout_marginTop="-2sp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/americantypewriter"
        android:text="@string/back"
        android:textColor="@color/myrtle_green"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/check"
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:layout_marginTop="-2sp"
        android:layout_marginEnd="5dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/americantypewriter"
        android:text="check"
        android:textColor="@color/myrtle_green"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/category_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100sp"
        android:layout_marginTop="30sp"
        android:fontFamily="@font/americantypewriter"
        android:text="@string/select_a_category"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_bar"
            app:defaultQueryHint="@string/Search"
            android:layout_width="390sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50sp"
            android:layout_marginStart="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ListView
            android:id="@+id/productList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/americantypewriter"
            android:divider="@color/myrtle_green"
            android:layout_marginTop="0sp"
            android:layout_marginStart="10sp"
            android:dividerHeight="4sp"
            android:listSelector="@color/rhythm"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:smoothScrollbar="true"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="false"/>
    </LinearLayout>
    <Spinner
        android:id="@+id/sort"
        android:layout_width="125sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="280sp"
        android:layout_marginTop="50sp"
        android:fontFamily="serif"
        android:minHeight="48dp"
        android:contentDescription="SORT BY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>